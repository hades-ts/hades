root = true

[*]
max_line_length = 120
trim_trailing_whitespace = true
indent_style = space

[*.{m?tsx?,m?jsx?,json}]
indent_size = 4

[*.nix]
indent_size = 2

[{camxes.js,pnpm-lock.yaml,flake.lock}]
max_line_length = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

[common/**]
max_line_length = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
