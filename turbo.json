{
    "$schema": "./node_modules/turbo/schema.json",
    "tasks": {
        "transit": {
            "dependsOn": ["^transit"]
        },
        "clean": {
            "cache": false
        },
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", "**/.env", "config"],
            "outputs": ["dist/**"]
        },
        "watch": {
            "dependsOn": ["transit"],
            "cache": false,
            "persistent": true
        },
        "//#root:lint": { "cache": false },
        "//#root:format": { "cache": false },
        "//#root:check": { "cache": false },
        "//#ci": { "cache": false },
        "//#purge": { "cache": false },
        "//#publish-packages": { "cache": false },
        "lint": {
            "dependsOn": ["transit"]
        },
        "test": {
            "dependsOn": ["transit"]
        }
    }
}
