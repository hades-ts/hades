{
        "compilerOptions": {
                "target": "es6",
                "module": "commonjs",
                "moduleResolution": "node",
                "strict": true,
                "esModuleInterop": true,
                "experimentalDecorators": true,
                "emitDecoratorMetadata": true,
                "allowSyntheticDefaultImports": true,
                "resolveJsonModule": true,
                "skipLibCheck": true,
                "allowJs": true,
                "lib": [
                        "dom",
                        "es6"
                ],
                "sourceMap": true,
                "rootDir": "src",
                "outDir": "dist/",
                "types": [
                        "node",
                        "reflect-metadata"
                ]
        },
        "include": [
                "src/**/*.ts",
                "src/**/*.js"
        ],
        "exclude": [
                "node_modules"
        ]
}
