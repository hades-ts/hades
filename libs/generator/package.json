{
    "name": "generator-hades-bot",
    "version": "0.0.7",
    "description": "Yeoman generator for Hades Discord bots",
    "files": [
        "generators"
    ],
    "keywords": [
        "yeoman-generator"
    ],
    "scripts": {
        "build": "tsc -b",
        "rebuild": "rm generators/index.js && npm run build",
        "copydeps": "copyfiles --up 1 'src/*/templates/**' generators",
        "lint": "eslint ./src --ext .js,.ts",
        "clean": "rimraf -rf ./generators",
        "watch": "npm run watch-tsc --silent & npm run watch-deps --silent",
        "watch-deps": "onchange 'src/*/templates/**' --initial -- npm run copydeps --silent",
        "watch-tsc": "tsc-watch --onSuccess 'npm run lint --silent'"
    },
    "dependencies": {
        "yeoman-generator": "~7.5.1",
        "chalk": "^4.1.0",
        "yosay": "^2.0.2",
        "yo": "5.1.0"
    },
    "devDependencies": {
        "@types/node": "^18.11.11",
        "@types/yeoman-generator": "~6.0.0",
        "@types/yosay": "^2.0.1",
        "eslint-plugin-hades": "workspace:^0.0.1",
        "eslint": "^8.26.0",
        "eslint-plugin-eslint-plugin": "^5.0.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-decorator-position": "^5.0.1",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-import-newlines": "^1.2.3",
        "eslint-plugin-simple-import-sort": "^8.0.0",
        "eslint-plugin-unused-imports": "3.x",
        "@typescript-eslint/eslint-plugin": "6.x",
        "@typescript-eslint/parser": "6.x",
        "copyfiles": "^2.4.1",
        "onchange": "^7.1.0",
        "rimraf": "^6.0.1",
        "tsc-watch": "^4.2.9",
        "typescript": "~5.8.3",
        "yeoman-assert": "^3.1.0",
        "eslint-config-prettier": "^9.0.0",
        "tsup": "~8.0.1",
        "mem-fs": "^4.0.0"
    },
    "module": "dist/index.mjs"
}