{
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.rulers": [100, 120],
    "editor.tabCompletion": "on",
    "editor.detectIndentation": false,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },
    "cSpell.words": [
        "camxes",
        "datetime",
        "inversify",
        "Karda",
        "lojban",
        "luxon",
        "metas",
        "subcontainer",
        "usertags"
    ],
    "exportall.config.folderListener": [
        "/bots/ares/src/utils",
        "/bots/chaos/src/guilds/services/ChannelService"
    ],
    "eslint.workingDirectories": [
        {
            "directory": "libs/bypass",
            "changeProcessCWD": true
        },
        {
            "directory": "libs/generator",
            "changeProcessCWD": true
        },
        {
            "directory": "libs/guilds",
            "changeProcessCWD": true
        },
        {
            "directory": "libs/hades",
            "changeProcessCWD": true
        },
        {
            "directory": "libs/ai",
            "changeProcessCWD": true
        },
        {
            "directory": "libs/tags",
            "changeProcessCWD": true
        },
        {
            "directory": "libs/lojban",
            "changeProcessCWD": true
        },
        {
            "directory": "libs/slash-commands",
            "changeProcessCWD": true
        },
        {
            "directory": "libs/stash",
            "changeProcessCWD": true
        },
        {
            "directory": "bots/apollo",
            "changeProcessCWD": true
        },
        {
            "directory": "bots/ares",
            "changeProcessCWD": true
        },
        {
            "directory": "bots/chaos",
            "changeProcessCWD": true
        },
        {
            "directory": "bots/hades",
            "changeProcessCWD": true
        },
        {
            "directory": "bots/pythia",
            "changeProcessCWD": true
        },
        {
            "directory": "bots/zeus",
            "changeProcessCWD": true
        },
        {
            "directory": "bots/hypnos",
            "changeProcessCWD": true
        }
    ],
    "[typescript]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[json]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[javascript]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[nix]": {
        "editor.defaultFormatter": "jnoortheen.nix-ide"
    }
}
