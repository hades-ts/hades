            "changeProcessCWD": true
        },
        {
            "directory": "libs/text-commands",
            "changeProcessCWD": true
        },
        {
            "directory": "bots/apollo",
            "changeProcessCWD": true
        },
        {
            "directory": "bots/ares",
            "changeProcessCWD": true
        },
        {
