      "projectFolder": "libs/hades",
      "shouldPublish": true
    },
    {
      "packageName": "@hades-ts/text-commands",
      "projectFolder": "libs/text-commands",
      "shouldPublish": true
    },
    {
      "packageName": "@hades-ts/slash-commands",
      "projectFolder": "libs/slash-commands",
      "shouldPublish": true
    },
    {
      "packageName": "@hades-ts/lojban",
      "projectFolder": "libs/lojban",
      "shouldPublish": true
    },
    {
      "packageName": "generator-hades-bot",
      "projectFolder": "libs/generator",
      "shouldPublish": true
    },
    {
      "packageName": "@hades-ts/docs",
      "projectFolder": "apps/docs",
      "shouldPublish": false
    },
    {
      "packageName": "@hades-ts/example-bot",
      "projectFolder": "bots/example-bot",
      "shouldPublish": false
    },
    {
      "packageName": "@hades-ts/pythia",
      "projectFolder": "bots/pythia",
      "shouldPublish": false
    }   
  ]
